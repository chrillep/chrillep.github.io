{
  "name": "chrillep.github.io",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint-typescript": "lerna run typescript",
    "lint-eslint": "eslint . --ext js,jsx,ts,tsx --max-warnings=0",
    "lint-eslint-fix": "eslint . --ext js,jsx,ts,tsx --fix --max-warnings=0",
    "lint-no-typescript": "run-p prettier-check lint-eslint",
    "lint": "run-p lint-typescript prettier-check lint-eslint",
    "lint-fix": "run-p prettier-fix lint-eslint-fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "lint-staged": "lint-staged"
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "classnames": "2.2.6",
    "date-fns": "2.16.1",
    "gray-matter": "4.0.2",
    "next": "10.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "remark": "13.0.0",
    "remark-html": "13.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/node": "14.14.25",
    "@types/react": "17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "autoprefixer": "10.2.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "8.2.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "tailwindcss": "2.0.2",
    "typescript": "4.1.3"
  }
}
